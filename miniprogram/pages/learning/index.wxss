/* 学习页面样式 */
.coming-soon-page {
  display: flex;
  align-items: center;
  justify-content: center;
  min-height: 100vh;
  background-color: var(--bg-light);
  text-align: center;
}

.container {
  padding: var(--space-2xl);
}

.title {
  display: block;
  font-size: var(--text-2xl);
  font-weight: var(--font-bold);
  color: var(--primary-color);
  margin-bottom: var(--space-md);
}

.subtitle {
  display: block;
  font-size: var(--text-base);
  color: var(--text-gray);
}
