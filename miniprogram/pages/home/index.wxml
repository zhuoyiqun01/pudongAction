<view class="home-page fade-in">
  <!-- 板块1: 正在发生 - 海报Banner -->
  <view class="section">
    <view class="section-title">正在发生</view>
    <view class="banner-section">
      <swiper class="banner-swiper" indicator-dots="{{true}}" autoplay="{{true}}" interval="3000" duration="500">
      <swiper-item wx:for="{{banners}}" wx:key="id">
        <image src="{{item.image}}" class="banner-image" mode="widthFix" bindtap="onBannerTap" data-url="{{item.url}}" />
        <view class="banner-overlay">
          <view class="banner-title">{{item.title}}</view>
          <view class="banner-desc">{{item.description}}</view>
        </view>
      </swiper-item>
    </swiper>
    </view>
  </view>

  <!-- 板块2: 社区小事是什么？-->
  <view class="section">
    <view class="section-title">社区小事是什么？</view>
    <view class="intro-section">
      <view class="container">
        <view class="intro-content">
          <view class="intro-subtitle">让小行动带来大改变</view>
        </view>

        <view class="feature-buttons">
        <view class="feature-btn" bindtap="goToGenerator">
          <view class="btn-icon">💡</view>
          <view class="btn-title">小事生成器</view>
          <view class="btn-desc">AI帮你想出创意小事</view>
        </view>

        <view class="feature-btn" bindtap="goToAction">
          <view class="btn-icon">🧩</view>
          <view class="btn-title">小事行动吧</view>
          <view class="btn-desc">发现项目，参与行动</view>
        </view>
      </view>
    </view>
    </view>
  </view>

  <!-- 板块3: 小事行动者墙 -->
  <view class="section">
    <view class="section-title">小事行动者墙</view>
    <view class="wall-section">
      <view class="container">
        <!-- 筛选器 -->
        <scroll-view scroll-x class="filter-options">
          <view
            wx:for="{{regions}}"
            wx:key="id"
            class="filter-option {{selectedRegion === item.id ? 'active' : ''}}"
            bindtap="selectRegion"
            data-region="{{item.id}}"
          >
            {{item.name}}
          </view>
        </scroll-view>

        <scroll-view scroll-x class="filter-options" style="margin-top: 12rpx;">
          <view
            wx:for="{{topics}}"
            wx:key="id"
            class="filter-option {{selectedTopic === item.id ? 'active' : ''}}"
            bindtap="selectTopic"
            data-topic="{{item.id}}"
          >
            {{item.name}}
          </view>
        </scroll-view>

      <!-- 瀑布流内容 -->
      <view class="waterfall-container">
        <view class="waterfall-column">
          <view
            wx:for="{{leftColumn}}"
            wx:key="id"
            class="action-card"
            bindtap="viewActionDetail"
            data-id="{{item.id}}"
          >
            <image src="{{item.image}}" class="card-image" mode="widthFix" />
            <view class="card-content">
              <view class="card-title">{{item.title}}</view>
              <view class="card-tags">
                <view
                  wx:for="{{item.tags}}"
                  wx:key="*"
                  class="tag"
                >
                  {{item}}
                </view>
              </view>
            </view>
          </view>
        </view>

        <view class="waterfall-column">
          <view
            wx:for="{{rightColumn}}"
            wx:key="id"
            class="action-card"
            bindtap="viewActionDetail"
            data-id="{{item.id}}"
          >
            <image src="{{item.image}}" class="card-image" mode="widthFix" />
            <view class="card-content">
              <view class="card-title">{{item.title}}</view>
              <view class="card-tags">
                <view
                  wx:for="{{item.tags}}"
                  wx:key="*"
                  class="tag"
                >
                  {{item}}
                </view>
              </view>
            </view>
          </view>
        </view>
      </view>
    </view>
    </view>
  </view>
</view>
