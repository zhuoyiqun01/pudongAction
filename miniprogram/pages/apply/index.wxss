/* 加入页面样式 */
.join-page {
  background-color: var(--bg-light);
  min-height: 100vh;
  padding-bottom: var(--space-2xl);
}

/* 页面头部 */
.page-header {
  background-color: var(--primary-color);
  padding: var(--space-2xl) 0 var(--space-xl);
  color: var(--white);
}

.page-title {
  font-size: var(--text-2xl);
  font-weight: var(--font-bold);
  display: block;
  text-align: center;
  margin-bottom: var(--space-sm);
  letter-spacing: -0.5rpx;
}

.page-subtitle {
  font-size: var(--text-base);
  opacity: 0.9;
  display: block;
  text-align: center;
  max-width: 600rpx;
  margin: 0 auto;
  line-height: 1.4;
}

/* 加入区域 */
.join-section {
  padding: var(--space-lg) var(--space-lg);
}

/* 表单卡片 */
.join-card {
  background-color: var(--white);
  border-radius: var(--radius-md);
  box-shadow: var(--shadow-sm);
  overflow: hidden;
  margin-bottom: var(--space-lg);
}

.card-header {
  padding: var(--space-lg) var(--space-lg) var(--space-md);
}

.card-title {
  font-size: var(--text-xl);
  font-weight: var(--font-bold);
  color: var(--text-dark);
  display: block;
  margin-bottom: var(--space-xs);
}

.card-subtitle {
  font-size: var(--text-sm);
  color: var(--text-gray);
  display: block;
}

/* 表单 */
.join-form {
  padding: var(--space-lg);
}

.form-group {
  margin-bottom: var(--space-lg);
}

.form-label {
  font-size: var(--text-base);
  font-weight: var(--font-semibold);
  color: var(--text-dark);
  display: block;
  margin-bottom: 12rpx;
}

.form-label.required::after {
  content: ' *';
  color: var(--error-color);
}

.form-input, .form-textarea {
  width: 100%;
  height: 88rpx;
  padding: 20rpx var(--space-md);
  border: 1rpx solid var(--border-gray);
  border-radius: var(--radius-md);
  font-size: var(--text-base);
  background-color: var(--white);
  transition: var(--transition-base);
  box-sizing: border-box;
  line-height: 1.4;
}

.form-input:focus, .form-textarea:focus {
  border-color: var(--primary-color);
  outline: none;
}

.form-textarea {
  min-height: 120rpx;
  resize: vertical;
  line-height: 1.5;
}

.textarea-count {
  font-size: var(--text-sm);
  color: var(--text-light);
  text-align: right;
  margin-top: var(--space-xs);
  display: block;
}

/* Picker样式 */
.picker-display {
  width: 100%;
  padding: 20rpx var(--space-md);
  border: 1rpx solid var(--border-gray);
  border-radius: var(--radius-md);
  font-size: var(--text-base);
  background-color: var(--white);
  color: var(--text-dark);
  cursor: pointer;
}

/* 兴趣标签 */
.interest-tags {
  display: flex;
  flex-wrap: wrap;
  gap: var(--space-sm);
}

.interest-tag {
  padding: 12rpx var(--space-md);
  background-color: var(--bg-gray);
  color: var(--text-gray);
  font-size: var(--text-sm);
  border-radius: var(--radius-md);
  cursor: pointer;
  transition: var(--transition-base);
  border: 1rpx solid transparent;
}

.interest-tag.active {
  background-color: var(--primary-color);
  color: var(--white);
  border-color: var(--primary-color);
}

.interest-tag:hover {
  background-color: var(--border-light);
}

.interest-tag.active:hover {
  background-color: var(--accent-navy);
}

/* 表单操作 */
.form-actions {
  margin-top: var(--space-xl);
  text-align: center;
}

.submit-btn {
  min-width: 200rpx;
  padding: var(--space-md) var(--space-xl);
  font-size: var(--text-lg);
  font-weight: var(--font-bold);
}

.submit-btn[disabled] {
  background-color: var(--text-light);
  color: var(--white);
  cursor: not-allowed;
}

/* 信息说明 */
.info-section {
  margin-top: var(--space-xl);
}

.info-card {
  background-color: var(--white);
  border-radius: var(--radius-md);
  padding: var(--space-lg);
  box-shadow: var(--shadow-sm);
}

.info-title {
  font-size: var(--text-lg);
  font-weight: var(--font-bold);
  color: var(--text-dark);
  display: block;
  margin-bottom: var(--space-md);
}

.info-list {
  display: flex;
  flex-direction: column;
  gap: var(--space-sm);
}

.info-item {
  font-size: var(--text-sm);
  color: var(--text-gray);
  line-height: 1.5;
  position: relative;
  padding-left: var(--space-lg);
}

.info-item::before {
  content: '';
  position: absolute;
  left: 0;
  top: 12rpx;
  width: 6rpx;
  height: 6rpx;
  background-color: var(--secondary-color);
  border-radius: 50%;
}

/* 响应式设计 */
@media (max-width: 750rpx) {
  .join-form {
    padding: var(--space-md);
  }

  .card-header {
    padding: var(--space-md) var(--space-md) var(--space-sm);
  }

  .form-group {
    margin-bottom: var(--space-md);
  }

  .interest-tags {
    gap: 12rpx;
  }

  .interest-tag {
    padding: 10rpx var(--space-sm);
    font-size: var(--text-sm);
  }
}
