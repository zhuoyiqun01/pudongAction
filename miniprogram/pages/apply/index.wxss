.join-page {
  background-color: var(--white);
  min-height: 100vh;
  padding-bottom: var(--space-4xl);
}

.container {
  max-width: 100%;
  padding: 0 var(--space-lg);
  box-sizing: border-box;
}

/* Header Section */
.header-section {
  background-color: var(--primary-color);
  color: var(--white);
  padding: 100rpx 0 160rpx;
  position: relative;
  overflow: hidden;
}

.tag-badge {
  display: inline-block;
  padding: 4rpx 16rpx;
  background-color: rgba(255, 255, 255, 0.1);
  font-size: var(--text-xs);
  font-weight: var(--font-black);
  letter-spacing: 4rpx;
  margin-bottom: var(--space-lg);
  border-radius: var(--radius-xs);
}

.header-title {
  font-size: var(--text-4xl);
  font-weight: var(--font-black);
  line-height: 1.1;
  margin-bottom: var(--space-lg);
  text-transform: uppercase;
}

.header-desc {
  font-size: var(--text-lg);
  font-weight: var(--font-bold);
  opacity: 0.8;
  line-height: 1.4;
  max-width: 80%;
}

.puzzle-block-decor {
  position: absolute;
  top: -40rpx;
  right: -80rpx;
  width: 240rpx;
  height: 240rpx;
  background-color: var(--secondary-color);
  clip-path: polygon(0% 0%, 75% 0%, 75% 25%, 100% 25%, 100% 75%, 75% 75%, 75% 100%, 0% 100%);
}

/* Steps Section */
.steps-section {
  padding: var(--space-4xl) 0;
}

.step-item {
  display: flex;
  flex-direction: column;
  margin-bottom: 120rpx;
  gap: var(--space-xl);
}

.step-item.reverse {
  /* Mobile remains column, but can adjust if needed */
}

.step-num {
  color: var(--primary-color);
  font-size: var(--text-xs);
  font-weight: var(--font-black);
  text-transform: uppercase;
  letter-spacing: 4rpx;
  margin-bottom: var(--space-sm);
}

.step-title {
  font-size: var(--text-xl);
  font-weight: var(--font-black);
  color: var(--primary-color);
  line-height: 1.2;
  margin-bottom: var(--space-md);
}

.step-desc {
  font-size: var(--text-base);
  color: var(--text-gray);
  font-weight: var(--font-bold);
  line-height: 1.6;
  margin-bottom: var(--space-lg);
}

.action-btn {
  display: inline-flex;
  align-items: center;
  gap: var(--space-sm);
  background-color: var(--primary-color);
  color: var(--white);
  padding: 24rpx 48rpx;
  font-size: var(--text-base);
  font-weight: var(--font-black);
  border-radius: 0;
  margin: 0;
  width: auto;
}

.step-image-box {
  width: 100%;
  padding: var(--space-md);
  box-sizing: border-box;
}

.puzzle-left {
  background-color: var(--accent-orange);
  clip-path: polygon(0% 15%, 15% 15%, 15% 0%, 85% 0%, 85% 15%, 100% 15%, 100% 85%, 85% 85%, 85% 100%, 15% 100%, 15% 85%, 0% 85%);
}

.puzzle-right {
  background-color: var(--accent-blue);
  clip-path: polygon(0% 0%, 75% 0%, 75% 25%, 100% 25%, 100% 75%, 75% 75%, 75% 100%, 0% 100%);
}

.step-img {
  width: 100%;
  height: 400rpx;
  display: block;
}

/* Provide Section */
.provide-section {
  background-color: var(--bg-light);
  padding: var(--space-4xl) 0;
}

.section-header {
  margin-bottom: var(--space-2xl);
}

.section-title {
  font-size: var(--text-2xl);
  font-weight: var(--font-black);
  color: var(--primary-color);
  text-transform: uppercase;
  letter-spacing: -1rpx;
}

.title-underline {
  height: 12rpx;
  width: 120rpx;
  background-color: var(--secondary-color);
  margin-top: var(--space-sm);
}

.provide-grid {
  display: flex;
  flex-direction: column;
  gap: var(--space-lg);
}

.provide-card {
  padding: var(--space-xl);
  display: flex;
  flex-direction: column;
  min-height: 400rpx;
}

.card-num {
  font-size: var(--text-4xl);
  font-weight: var(--font-black);
  opacity: 0.2;
  margin-bottom: var(--space-lg);
}

.card-title {
  font-size: var(--text-xl);
  font-weight: var(--font-black);
  margin-bottom: var(--space-md);
}

.card-desc {
  font-size: var(--text-sm);
  font-weight: var(--font-bold);
  line-height: 1.6;
  margin-bottom: var(--space-xl);
}

.card-footer {
  margin-top: auto;
  display: flex;
  flex-direction: column;
  gap: var(--space-sm);
}

.card-btn {
  width: 100% !important;
  font-weight: var(--font-black);
  font-size: var(--text-sm);
  padding: 24rpx 0;
  border-radius: 0;
}

.card-btn.primary { background-color: var(--primary-color); color: var(--white); }
.card-btn.secondary { background-color: var(--secondary-color); color: var(--primary-color); }
.card-btn.white { background-color: var(--white); color: var(--primary-color); }

.bg-primary { background-color: var(--primary-color); }
.bg-accent-blue { background-color: var(--accent-blue); }
.bg-accent-orange { background-color: var(--accent-orange); }
.bg-navy { background-color: var(--accent-navy); }
.color-secondary { color: var(--secondary-color); }

/* Form Section */
.form-section {
  padding: var(--space-4xl) 0;
}

.form-card {
  background-color: var(--white);
  padding: var(--space-xl);
  border-radius: var(--radius-lg);
}

.form-header {
  margin-bottom: var(--space-xl);
  text-align: center;
}

.form-title {
  font-size: var(--text-2xl);
  font-weight: var(--font-black);
  color: var(--primary-color);
}

.form-subtitle {
  font-size: var(--text-base);
  color: var(--text-gray);
  margin-top: var(--space-xs);
}

.form-group {
  margin-bottom: var(--space-lg);
}

.form-label {
  display: block;
  font-size: var(--text-sm);
  font-weight: var(--font-bold);
  color: var(--text-dark);
  margin-bottom: var(--space-xs);
}

.form-label.required::after {
  content: ' *';
  color: var(--error-color);
}

.form-input, .picker-display {
  width: 100%;
  height: 88rpx;
  border: 4rpx solid var(--border-gray);
  padding: 0 var(--space-md);
  box-sizing: border-box;
  font-size: var(--text-base);
  display: flex;
  align-items: center;
}

.picker-display.placeholder {
  color: var(--text-light);
}

.form-textarea {
  width: 100%;
  height: 240rpx;
  border: 4rpx solid var(--border-gray);
  padding: var(--space-md);
  box-sizing: border-box;
  font-size: var(--text-base);
}

.textarea-count {
  display: block;
  text-align: right;
  font-size: var(--text-xs);
  color: var(--text-light);
  margin-top: var(--space-2xs);
}

.form-actions {
  margin-top: var(--space-2xl);
}

.submit-btn {
  width: 100% !important;
  height: 100rpx;
  background-color: var(--primary-color);
  color: var(--white);
  font-weight: var(--font-black);
  border-radius: var(--radius-full);
}

.opacity-80 { opacity: 0.8; }
