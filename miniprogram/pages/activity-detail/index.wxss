.detail-page {
  background-color: var(--white);
  min-height: 100vh;
  padding-bottom: calc(120rpx + var(--space-xl) + env(safe-area-inset-bottom)); /* 为底部按钮预留空间 */
}

.detail-image-wrapper {
  width: 100%;
  padding-bottom: 42.553%; /* 1:2.35 比例 (1/2.35 * 100%) */
  height: 0;
  position: relative;
  overflow: hidden;
}

.detail-image {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
}

.detail-content {
  padding: var(--space-lg);
}

.detail-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: var(--space-lg);
}

.detail-title {
  font-size: var(--text-2xl);
  font-weight: var(--font-bold);
  color: var(--text-dark);
  flex: 1;
}

.activity-status {
  font-size: var(--text-sm);
  padding: 6rpx 20rpx;
  border-radius: var(--radius-sm);
  white-space: nowrap;
  font-weight: var(--font-medium);
  margin-left: var(--space-md);
}

.activity-status.status-pending {
  color: var(--text-gray);
  background-color: #f1f5f9;
}

.activity-status.status-ongoing {
  color: var(--primary-color);
  background-color: #e0f2f1;
}

.activity-status.status-ended {
  color: var(--text-light);
  background-color: #f8fafc;
}

.detail-meta {
  background-color: var(--bg-light);
  padding: var(--space-md);
  border-radius: var(--radius-md);
  margin-bottom: var(--space-xl);
}

.meta-item {
  display: flex;
  align-items: center;
  gap: var(--space-sm);
  margin-bottom: var(--space-sm);
}

.meta-item:last-child {
  margin-bottom: 0;
}

.meta-text {
  font-size: var(--text-base);
  color: var(--text-gray);
}

.detail-section {
  margin-top: var(--space-xl);
}

.section-title {
  font-size: var(--text-lg);
  font-weight: var(--font-bold);
  color: var(--primary-color);
  margin-bottom: var(--space-md);
  padding-left: var(--space-sm);
  border-left: 8rpx solid var(--primary-color);
}

.rich-content {
  font-size: var(--text-base);
  color: var(--text-dark);
  line-height: 1.8;
}

/* 富文本中的图片样式 */
.rich-content img {
  max-width: 100%;
  height: auto;
  display: block;
  margin: var(--space-md) 0;
  border-radius: var(--radius-sm);
}

/* 介绍图片区域 */
.intro-images-section {
  margin-top: var(--space-xl);
  display: flex;
  flex-direction: column;
  gap: var(--space-md);
}

.intro-image {
  width: 100%;
  height: auto;
  display: block;
  border-radius: var(--radius-sm);
}

.detail-footer {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: var(--space-md) var(--space-lg);
  padding-bottom: calc(var(--space-xl) + env(safe-area-inset-bottom)); /* 48rpx + 安全区域 */
  background-color: var(--white);
  box-shadow: 0 -4rpx 12rpx rgba(0, 0, 0, 0.05);
  display: flex;
  justify-content: center;
}

.join-btn {
  width: 100%;
  background-color: var(--primary-color);
  color: var(--white);
  border-radius: var(--radius-full);
  font-weight: var(--font-bold);
  border: none;
}

.join-btn::after {
  border: none;
}

.loading {
  text-align: center;
  padding: var(--space-4xl) 0;
  color: var(--text-gray);
}

/* 报名方式弹窗 */
.modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  z-index: var(--z-modal);
  display: flex;
  align-items: center;
  justify-content: center;
  opacity: 0;
  visibility: hidden;
  transition: opacity 0.3s ease, visibility 0.3s ease;
}

.modal-overlay.show {
  opacity: 1;
  visibility: visible;
}

.modal-content {
  width: 80%;
  max-width: 600rpx;
  background-color: var(--white);
  border-radius: var(--radius-lg);
  overflow: hidden;
  transform: scale(0.9);
  transition: transform 0.3s ease;
}

.modal-overlay.show .modal-content {
  transform: scale(1);
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: var(--space-lg);
  border-bottom: 1rpx solid var(--border-gray);
}

.modal-title {
  font-size: var(--text-lg);
  font-weight: var(--font-bold);
  color: var(--text-dark);
}

.modal-close {
  font-size: 48rpx;
  color: var(--text-gray);
  line-height: 1;
  cursor: pointer;
  width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.modal-body {
  padding: var(--space-lg);
}

.register-info-text {
  font-size: var(--text-base);
  color: var(--text-dark);
  line-height: 1.8;
  margin-bottom: var(--space-lg);
  word-break: break-all;
  min-height: 200rpx;
  max-height: 400rpx;
  overflow-y: auto;
}

.copy-btn {
  width: 100%;
  background-color: var(--primary-color);
  color: var(--white);
  border-radius: var(--radius-md);
  font-weight: var(--font-bold);
  border: none;
  font-size: var(--text-base);
}

.copy-btn::after {
  border: none;
}