/* 活动家页面样式 */
.activists-page {
  background-color: var(--bg-light);
  min-height: 100vh;
}

/* 页面头部 */
.page-header {
  background-color: var(--primary-color);
  padding: var(--space-2xl) 0 var(--space-xl);
  color: var(--white);
}

.page-title {
  font-size: var(--text-2xl);
  font-weight: var(--font-bold);
  display: block;
  text-align: center;
  margin-bottom: var(--space-sm);
  letter-spacing: -0.5rpx;
}

.page-subtitle {
  font-size: var(--text-base);
  opacity: 0.9;
  display: block;
  text-align: center;
}

/* 筛选区域 */
.filters-section {
  background-color: var(--white);
  padding: var(--space-lg) var(--space-lg);
}

.filters-content {
  display: flex;
  flex-direction: column;
  gap: var(--space-lg);
}

.filter-group {
  display: flex;
  flex-direction: column;
  gap: var(--space-sm);
}

.filter-label {
  font-size: var(--text-base);
  font-weight: var(--font-semibold);
  color: var(--text-dark);
}

.filter-options {
  display: flex;
  flex-wrap: wrap;
  gap: var(--space-sm);
}

.filter-option {
  padding: 12rpx var(--space-md);
  background-color: var(--bg-gray);
  color: var(--text-gray);
  font-size: var(--text-sm);
  border-radius: var(--radius-lg);
  cursor: pointer;
  transition: var(--transition-base);
}

.filter-option.active {
  background-color: var(--primary-color);
  color: var(--white);
}

.filter-option:hover {
  background-color: var(--border-light);
}

.filter-option.active:hover {
  background-color: var(--accent-navy);
}

/* 搜索区域 */
.search-group {
  display: flex;
  gap: var(--space-sm);
  align-items: center;
}

.search-input {
  flex: 1;
  padding: var(--space-sm) var(--space-md);
  border: 1rpx solid var(--border-gray);
  border-radius: var(--radius-sm);
  font-size: var(--text-base);
  background-color: var(--white);
}

.search-btn {
  padding: var(--space-sm) var(--space-lg);
  background-color: var(--secondary-color);
  color: var(--primary-color);
  font-size: var(--text-base);
  font-weight: var(--font-semibold);
  border: none;
  border-radius: var(--radius-sm);
  cursor: pointer;
}

/* 活动家区域 */
.activists-section {
  padding: var(--space-lg) var(--space-lg) var(--space-2xl) var(--space-lg);
}

.loading, .empty-state {
  text-align: center;
  padding: var(--space-4xl) 0;
  color: var(--text-gray);
  font-size: var(--text-base);
}

.empty-text {
  color: var(--text-light);
  font-size: var(--text-lg);
}

/* 活动家网格 */
.activists-grid {
  display: grid;
  grid-template-columns: repeat(auto-fill, minmax(300rpx, 1fr));
  gap: var(--space-lg);
}

/* 活动家卡片 */
.activist-card {
  background-color: var(--white);
  border-radius: var(--radius-md);
  overflow: hidden;
  box-shadow: var(--shadow-sm);
  transition: var(--transition-base);
  cursor: pointer;
}

.activist-card:hover {
  transform: translateY(-4rpx);
  box-shadow: var(--shadow-md);
}

/* 头像区域 */
.activist-avatar {
  position: relative;
  height: 200rpx;
  overflow: hidden;
}

.avatar-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.activist-tag {
  position: absolute;
  top: var(--space-sm);
  right: var(--space-sm);
  background-color: rgba(251, 191, 36, 0.9);
  color: var(--primary-color);
  padding: 8rpx var(--space-sm);
  border-radius: var(--radius-sm);
  font-size: var(--text-xs);
  font-weight: var(--font-semibold);
}

/* 信息区域 */
.activist-info {
  padding: var(--space-md);
}

.activist-name {
  font-size: var(--text-lg);
  font-weight: var(--font-bold);
  color: var(--text-dark);
  display: block;
  margin-bottom: var(--space-xs);
}

.activist-role {
  font-size: var(--text-sm);
  color: var(--success-color);
  font-weight: var(--font-semibold);
  display: block;
  margin-bottom: var(--space-xs);
}

.activist-street {
  font-size: var(--text-xs);
  color: var(--text-gray);
  display: block;
  margin-bottom: var(--space-sm);
  padding: 6rpx var(--space-sm);
  background-color: var(--bg-gray);
  border-radius: var(--radius-xs);
  display: inline-block;
}

.activist-bio {
  font-size: var(--text-sm);
  color: var(--text-gray);
  line-height: 1.5;
  display: -webkit-box;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

/* 加载更多 */
.load-more, .no-more {
  text-align: center;
  margin-top: var(--space-xl);
}

.no-more text {
  color: var(--text-light);
  font-size: var(--text-sm);
}

/* 响应式设计 */
@media (max-width: 750rpx) {
  .activists-grid {
    grid-template-columns: 1fr;
  }

  .filters-content {
    gap: var(--space-md);
  }

  .filter-options {
    gap: 12rpx;
  }

  .filter-option {
    padding: 10rpx var(--space-md);
    font-size: var(--text-sm);
  }
}
