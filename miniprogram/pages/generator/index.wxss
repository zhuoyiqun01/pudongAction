/* pages/generator/index.wxss */
.container {
  min-height: 100vh;
  background-color: #f8fafc;
  padding: 32rpx;
}

/* 步骤指示器 */
.step-indicator {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 64rpx;
}

.step {
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  background-color: #e2e8f0;
  color: #64748b;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  font-weight: 600;
  transition: all 0.3s ease;
}

.step.active {
  background-color: #068D7B;
  color: white;
}

.step-line {
  width: 120rpx;
  height: 4rpx;
  background-color: #e2e8f0;
  margin: 0 16rpx;
  transition: all 0.3s ease;
}

.step-line.active {
  background-color: #068D7B;
}

/* 步骤内容 */
.step-content {
  display: none;
  animation: fadeIn 0.5s ease-out;
}

.step-content.active {
  display: block;
}

.step-title {
  font-size: 48rpx;
  font-weight: 700;
  color: #1a365d;
  text-align: center;
  margin-bottom: 16rpx;
}

.step-desc {
  font-size: 28rpx;
  color: #64748b;
  text-align: center;
  margin-bottom: 48rpx;
}

/* 类别选择 */
.category-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 24rpx;
  margin-bottom: 48rpx;
}

.category-card {
  background-color: white;
  border-radius: 16rpx;
  padding: 32rpx 24rpx;
  text-align: center;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
  transition: all 0.3s ease;
  border: 2rpx solid transparent;
}

.category-card:hover,
.category-card.selected {
  border-color: #068D7B;
  box-shadow: 0 4rpx 16rpx rgba(6, 141, 123, 0.2);
  transform: translateY(-4rpx);
}

.category-icon {
  font-size: 64rpx;
  margin-bottom: 16rpx;
}

.category-name {
  font-size: 28rpx;
  color: #1a365d;
  font-weight: 600;
}

/* 输入区域 */
.idea-input {
  width: 100%;
  height: 200rpx;
  border: 2rpx solid #e2e8f0;
  border-radius: 12rpx;
  padding: 24rpx;
  font-size: 28rpx;
  line-height: 1.5;
  margin-bottom: 24rpx;
  background-color: white;
}

.selected-category {
  background-color: #d1fae5;
  color: #065f46;
  padding: 16rpx 24rpx;
  border-radius: 8rpx;
  font-size: 24rpx;
  margin-bottom: 48rpx;
}

.generate-btn {
  width: 100%;
  background-color: #068D7B;
  color: white;
  border: none;
  border-radius: 12rpx;
  height: 88rpx;
  font-size: 32rpx;
  font-weight: 600;
}

/* 结果展示 */
.result-card {
  background-color: white;
  border-radius: 16rpx;
  padding: 48rpx 32rpx;
  text-align: center;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
  margin-bottom: 48rpx;
}

.result-icon {
  font-size: 80rpx;
  margin-bottom: 24rpx;
}

.result-text {
  font-size: 32rpx;
  color: #1a365d;
  line-height: 1.6;
  font-weight: 500;
}

/* 操作按钮 */
.action-buttons {
  display: flex;
  gap: 24rpx;
}

.share-btn,
.restart-btn {
  flex: 1;
  height: 88rpx;
  border-radius: 12rpx;
  font-size: 32rpx;
  font-weight: 600;
  border: none;
}

.share-btn {
  background-color: #FFE501;
  color: #1a365d;
}

.restart-btn {
  background-color: #e2e8f0;
  color: #64748b;
}

@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translateY(20rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}
