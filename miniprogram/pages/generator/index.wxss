/* pages/generator/index.wxss */
.container {
  min-height: 100vh;
  background-color: var(--bg-light);
  padding: var(--space-lg);
}

/* 步骤指示器 */
.step-indicator {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: var(--space-2xl);
}

.step {
  width: var(--space-2xl);
  height: var(--space-2xl);
  border-radius: var(--radius-full);
  background-color: var(--border-gray);
  color: var(--text-gray);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: var(--text-base);
  font-weight: var(--font-semibold);
  transition: var(--transition-base);
}

.step.active {
  background-color: var(--primary-color);
  color: var(--white);
}

.step-line {
  width: 120rpx;
  height: 4rpx;
  background-color: var(--border-gray);
  margin: 0 var(--space-sm);
  transition: var(--transition-base);
}

.step-line.active {
  background-color: var(--primary-color);
}

/* 步骤内容 */
.step-content {
  display: none;
  animation: fadeIn var(--transition-slow);
}

.step-content.active {
  display: block;
}

.step-title {
  font-size: var(--text-2xl);
  font-weight: var(--font-bold);
  color: var(--accent-navy);
  text-align: center;
  margin-bottom: var(--space-sm);
}

.step-desc {
  font-size: var(--text-base);
  color: var(--text-gray);
  text-align: center;
  margin-bottom: var(--space-xl);
}

/* 类别选择 */
.category-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: var(--space-md);
  margin-bottom: var(--space-xl);
}

.category-card {
  background-color: var(--white);
  padding: var(--space-lg) var(--space-md);
  text-align: center;
  transition: var(--transition-fast);
}

.category-card:hover,
.category-card.selected {
  border: var(--space-2xs) solid var(--primary-color);
  background-color: var(--bg-light);
  transform: translateY(0);
}

.category-icon {
  font-size: var(--space-2xl);
  margin-bottom: var(--space-sm);
}

.category-name {
  font-size: var(--text-base);
  color: var(--accent-navy);
  font-weight: var(--font-semibold);
}

/* 输入区域 */
.idea-input {
  width: 100%;
  height: 200rpx;
  padding: var(--space-md);
  font-size: var(--text-base);
  line-height: 1.5;
  margin-bottom: var(--space-md);
  background-color: var(--bg-light);
}

.selected-category {
  background-color: #d1fae5;
  color: #065f46;
  padding: var(--space-sm) var(--space-md);
  border-radius: var(--radius-sm);
  font-size: var(--text-sm);
  margin-bottom: var(--space-xl);
}

.generate-btn {
  width: 100%;
  background-color: var(--primary-color);
  color: var(--white);
  height: 88rpx;
  font-size: var(--text-lg);
  font-weight: var(--font-semibold);
  border: var(--space-2xs) solid var(--accent-pink);
}

/* 结果展示 */
.result-card {
  background-color: var(--white);
  padding: var(--space-xl) var(--space-lg);
  text-align: center;
  border: var(--space-2xs) solid var(--accent-blue);
  margin-bottom: var(--space-xl);
}

.result-icon {
  font-size: 80rpx;
  margin-bottom: var(--space-md);
}

.result-text {
  font-size: var(--text-lg);
  color: var(--accent-navy);
  line-height: 1.6;
  font-weight: var(--font-medium);
}

/* 操作按钮 */
.action-buttons {
  display: flex;
  gap: var(--space-md);
}

.share-btn,
.restart-btn {
  flex: 1;
  height: 88rpx;
  font-size: var(--text-lg);
  font-weight: var(--font-semibold);
}

.share-btn {
  background-color: var(--secondary-color);
  color: var(--accent-navy);
}

.restart-btn {
  background-color: var(--border-gray);
  color: var(--text-gray);
}

@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translateY(20rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}
