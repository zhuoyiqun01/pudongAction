/* pages/generator/index.wxss */
.generator-page {
  padding: var(--space-xl) var(--space-lg);
  min-height: 100vh;
  background-color: var(--bg-light);
}

.header-area {
  margin-bottom: var(--space-lg);
}

.title {
  display: block;
  font-size: var(--text-3xl);
  font-weight: var(--font-bold);
  color: var(--primary-color);
  margin-bottom: var(--space-xs);
}

.sub-title-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.sub-title {
  font-size: var(--text-base);
  color: var(--text-gray);
  flex: 1;
}

.change-topic-btn {
  padding: var(--space-xs) var(--space-md);
  background: var(--white);
  border: 1rpx solid var(--border-gray);
  border-radius: var(--radius-full);
  display: flex;
  align-items: center;
  justify-content: center;
  transition: var(--transition-base);
  margin-left: var(--space-md);
}

.change-topic-btn:active {
  opacity: 0.7;
}

.change-topic-text {
  font-size: var(--text-sm);
  color: var(--text-gray);
}

.input-area {
  background: var(--white);
  padding: var(--space-md);
  border-radius: var(--radius-md);
  box-shadow: var(--shadow-sm);
  margin-bottom: var(--space-xl);
}

.main-input {
  min-height: 120rpx;
  font-size: var(--text-lg);
  border-bottom: 2rpx solid var(--border-light);
  margin-bottom: var(--space-md);
  padding: var(--space-sm) 0;
  line-height: 1.6;
  width: 100%;
}

.generate-btn {
  background-color: var(--primary-color);
  color: var(--white);
  border-radius: var(--radius-full);
  font-weight: var(--font-bold);
  transition: var(--transition-base);
  border: none;
}

.generate-btn::after {
  border: none;
}

.generate-btn.loading {
  opacity: 0.7;
}

.ai-notice {
  text-align: center;
  font-size: var(--text-xs);
  color: var(--text-light);
  margin-top: var(--space-sm);
}

/* 标签区域 */
.tags-area {
  margin-top: var(--space-lg);
}

.tag-title {
  font-size: var(--text-sm);
  color: var(--text-light);
  margin-bottom: var(--space-sm);
}

.tag-list {
  display: flex;
  flex-wrap: wrap;
  gap: var(--space-sm);
}

.tag {
  padding: var(--space-xs) var(--space-md);
  background: var(--white);
  border-radius: var(--radius-full);
  font-size: var(--text-sm);
  color: var(--text-gray);
  border: 1rpx solid var(--border-gray);
}

/* 结果区域 */
.result-area {
  margin-top: var(--space-xl);
  animation: fadeIn 0.5s ease-out;
}

.result-header {
  font-size: var(--text-base);
  font-weight: var(--font-bold);
  color: var(--text-dark);
  margin-bottom: var(--space-xs);
}

.tip-text {
  font-size: var(--text-xs);
  color: var(--text-light);
  margin-bottom: var(--space-md);
}

.suggestion-card {
  background: var(--white);
  border-radius: var(--radius-md);
  padding: var(--space-lg);
  margin-bottom: var(--space-md);
  box-shadow: var(--shadow-sm); /* 从 md 降级到 sm，保持全站轻量感一致 */
  border: none; /* 取消描边 */
  position: relative; /* 增加相对定位，为按钮定位做准备 */
}

/* 类型颜色：观察类/互动类/行动类 */
.level-0 { background-color: #F1F8FF; }
.level-0 .level-badge { color: #1a365d; background: #E3F2FD; }

.level-1 { background-color: #F1FBEF; }
.level-1 .level-badge { color: #068D7B; background: #E8F5E9; }

.level-2 { background-color: #FFFBFA; } /* 行动类可使用黄色作为区分 */
.level-2 .level-badge { color: #F49B9B; background: #FFF3E0; }

.card-header {
  display: flex;
  align-items: center;
  margin-bottom: var(--space-sm);
}

.level-badge {
  font-size: var(--text-xs);
  padding: var(--space-2xs) var(--space-sm);
  border-radius: var(--radius-xs);
  margin-right: var(--space-sm);
  font-weight: var(--font-bold);
  display: flex;
  align-items: center;
  gap: var(--space-2xs);
}

.badge-icon {
  font-size: var(--text-xs);
}

.card-title {
  font-size: var(--text-lg);
  font-weight: var(--font-bold);
  color: var(--text-dark);
}

.card-desc {
  font-size: var(--text-base);
  color: var(--text-gray);
  line-height: 1.6;
  margin-bottom: var(--space-md);
  padding-bottom: 40rpx; /* 为右下角按钮留出空间 */
}

.adopt-btn {
  position: absolute;
  right: var(--space-md);
  bottom: var(--space-md);
  width: auto !important;
  min-width: 140rpx;
  height: 56rpx;
  padding: 0 var(--space-lg) !important;
  background: var(--bg-gray);
  color: var(--text-dark);
  font-size: 22rpx;
  border-radius: var(--radius-full);
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 0 !important;
  border: none;
}

.adopt-btn::after {
  border: none;
}

.re-generate {
  text-align: center;
  color: var(--text-gray);
  font-size: var(--text-sm);
  margin-top: var(--space-xl);
  padding: var(--space-md);
}

/* 详情弹窗样式 */
.modal-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.6);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 2000;
  padding: 40rpx;
}

.modal-content {
  width: 100%;
  background-color: var(--primary-color);
  border-radius: 32rpx;
  position: relative;
  overflow: hidden;
  padding: 60rpx 40rpx;
  animation: modalIn 0.3s ease-out;
}

@keyframes modalIn {
  from { transform: translateY(100rpx); opacity: 0; }
  to { transform: translateY(0); opacity: 1; }
}

.modal-header {
  text-align: center;
  margin-bottom: 40rpx;
}

.user-question {
  color: rgba(255, 255, 255, 0.8);
  font-size: var(--text-sm);
  font-style: italic;
}

.modal-body {
  margin-bottom: 60rpx;
}

.idea-box {
  background-color: var(--white);
  border-radius: 24rpx;
  padding: 40rpx;
  display: flex;
  flex-direction: column;
  gap: var(--space-lg);
}

.idea-label {
  display: inline-block;
  font-size: var(--text-xs);
  color: var(--primary-color);
  background-color: #e0f2f1;
  padding: var(--space-2xs) var(--space-sm);
  border-radius: 8rpx;
  width: fit-content;
  font-weight: var(--font-bold);
}

.idea-title {
  font-size: 40rpx;
  font-weight: var(--font-bold);
  color: var(--text-dark);
  line-height: 1.2;
}

.idea-desc {
  font-size: var(--text-base);
  color: var(--text-gray);
  line-height: 1.6;
}

.modal-footer {
  display: flex;
  gap: var(--space-lg);
}

.footer-btn {
  flex: 1;
  height: 88rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 44rpx;
  font-size: var(--text-base);
  font-weight: var(--font-bold);
  border: none;
}

.save-btn {
  background-color: rgba(255, 255, 255, 0.2);
  color: var(--white);
  border: 1rpx solid rgba(255, 255, 255, 0.4);
}

.share-btn {
  background-color: var(--secondary-color);
  color: var(--primary-color);
}

.modal-close {
  position: absolute;
  top: var(--space-lg);
  right: var(--space-lg);
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: rgba(255, 255, 255, 0.6);
  font-size: 40rpx;
}

/* 加载动画 */
.loading-area {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: var(--space-4xl) 0;
}

.loading-spinner {
  width: 80rpx;
  height: 80rpx;
  border: 6rpx solid var(--border-gray);
  border-top-color: var(--primary-color);
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

.loading-text {
  font-size: var(--text-base);
  color: var(--text-gray);
}

@keyframes spin {
  to { transform: rotate(360deg); }
}

/* 免责声明弹窗样式 */
.disclaimer-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.6);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 3000;
  padding: 40rpx;
}

.disclaimer-content {
  width: 100%;
  max-width: 600rpx;
  background-color: var(--white);
  border-radius: 24rpx;
  padding: 48rpx 40rpx;
  animation: modalIn 0.3s ease-out;
}

.disclaimer-title {
  font-size: var(--text-xl);
  font-weight: var(--font-bold);
  color: var(--text-dark);
  text-align: center;
  margin-bottom: var(--space-lg);
}

.disclaimer-text {
  display: flex;
  flex-direction: column;
  gap: var(--space-sm);
  font-size: var(--text-base);
  color: var(--text-gray);
  line-height: 1.6;
  margin-bottom: var(--space-xl);
}

.disclaimer-bold {
  font-weight: var(--font-semibold);
  color: var(--text-dark);
  margin-bottom: var(--space-xs);
}

.disclaimer-btn {
  width: 100%;
  height: 88rpx;
  background-color: var(--primary-color);
  color: var(--white);
  border-radius: 44rpx;
  font-size: var(--text-base);
  font-weight: var(--font-bold);
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
}

.disclaimer-btn::after {
  border: none;
}
