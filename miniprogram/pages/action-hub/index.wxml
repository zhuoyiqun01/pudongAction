<!-- pages/action-hub/index.wxml - 小事行动吧 (枢纽页) -->
<view class="action-hub-page fade-in">
  <view class="hub-header px-lg py-lg">
    <view class="text-3xl font-bold text-primary mb-xs">小事行动吧</view>
    <view class="text-gray text-base">开启你的社区行动之旅</view>
  </view>

  <view class="menu-grid px-lg pb-xl">
    <view 
      wx:for="{{menuItems}}" 
      wx:key="id"
      class="menu-item span-{{item.span}}"
      bindtap="onMenuItemTap"
      data-item="{{item}}"
      style="--item-color: {{item.color}}"
    >
      <view class="menu-content">
        <view class="menu-icon-wrapper">
          <text class="menu-icon">{{item.icon}}</text>
        </view>
        <view class="menu-title">{{item.title}}</view>
        <view class="menu-arrow">→</view>
      </view>
    </view>
  </view>
</view>
