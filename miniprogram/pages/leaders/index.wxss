/* 领导者页面样式 */
.leaders-page {
  background-color: var(--bg-light);
  min-height: 100vh;
}

/* 页面头部 */
.page-header {
  background-color: var(--primary-color);
  padding: var(--space-2xl) 0 var(--space-xl);
  color: var(--white);
}

.page-title {
  font-size: var(--text-2xl);
  font-weight: var(--font-bold);
  display: block;
  text-align: center;
  margin-bottom: var(--space-sm);
  letter-spacing: -0.5rpx;
}

.page-subtitle {
  font-size: var(--text-base);
  opacity: 0.9;
  display: block;
  text-align: center;
}

/* 筛选区域 */
.filters-section {
  background-color: var(--white);
  padding: var(--space-lg) var(--space-lg);
}

.filters-content {
  display: flex;
  flex-direction: column;
  gap: var(--space-lg);
}

.filter-group {
  display: flex;
  flex-direction: column;
  gap: var(--space-sm);
}

.filter-label {
  font-size: var(--text-base);
  font-weight: var(--font-semibold);
  color: var(--text-dark);
}

.filter-options {
  display: flex;
  flex-wrap: wrap;
  gap: var(--space-sm);
}

.filter-option {
  padding: 12rpx var(--space-md);
  background-color: var(--bg-gray);
  color: var(--text-gray);
  font-size: var(--text-sm);
  border-radius: var(--radius-lg);
  cursor: pointer;
  transition: var(--transition-base);
}

.filter-option.active {
  background-color: var(--primary-color);
  color: var(--white);
}

.filter-option:hover {
  background-color: var(--border-light);
}

.filter-option.active:hover {
  background-color: var(--accent-navy);
}

/* 搜索区域 */
.search-group {
  display: flex;
  gap: var(--space-sm);
  align-items: center;
}

.search-input {
  flex: 1;
  padding: var(--space-sm) var(--space-md);
  border: 1rpx solid var(--border-gray);
  border-radius: var(--radius-sm);
  font-size: var(--text-base);
  background-color: var(--white);
}

.search-btn {
  padding: var(--space-sm) var(--space-lg);
  background-color: var(--warning-color);
  color: var(--primary-color);
  font-size: var(--text-base);
  font-weight: var(--font-semibold);
  border: none;
  border-radius: var(--radius-sm);
  cursor: pointer;
}

/* 领导者区域 */
.leaders-section {
  padding: var(--space-lg) var(--space-lg) var(--space-2xl) var(--space-lg);
}

.loading, .empty-state {
  text-align: center;
  padding: var(--space-4xl) 0;
  color: var(--text-gray);
  font-size: var(--text-base);
}

.empty-text {
  color: var(--text-light);
  font-size: var(--text-lg);
}

/* 领导者列表 */
.leaders-list {
  display: flex;
  flex-direction: column;
  gap: var(--space-md);
}

/* 领导者卡片 */
.leader-card {
  background-color: var(--white);
  border-radius: var(--radius-md);
  overflow: hidden;
  box-shadow: var(--shadow-sm);
  transition: var(--transition-base);
  cursor: pointer;
  display: flex;
  padding: var(--space-md);
}

.leader-card:hover {
  transform: translateY(-4rpx);
  box-shadow: var(--shadow-md);
}

/* 头像区域 */
.leader-avatar {
  flex-shrink: 0;
  width: 120rpx;
  height: 120rpx;
  border-radius: var(--radius-sm);
  overflow: hidden;
  margin-right: var(--space-md);
}

.avatar-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

/* 信息区域 */
.leader-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.leader-header {
  display: flex;
  align-items: center;
  gap: var(--space-sm);
}

.leader-name {
  font-size: var(--text-xl);
  font-weight: var(--font-bold);
  color: var(--text-dark);
}

.leader-role {
  font-size: var(--text-xs);
  color: var(--success-color);
  background-color: #ecfdf5;
  padding: 6rpx var(--space-sm);
  border-radius: var(--radius-xs);
  font-weight: var(--font-semibold);
}

.leader-details {
  display: flex;
  flex-direction: column;
  gap: var(--space-xs);
}

.leader-community, .leader-street {
  font-size: var(--text-sm);
  color: var(--text-gray);
  padding: 6rpx var(--space-sm);
  background-color: var(--bg-gray);
  border-radius: var(--radius-xs);
  display: inline-block;
  width: fit-content;
}

.leader-slogan {
  font-size: var(--text-base);
  color: var(--text-dark);
  line-height: 1.5;
  font-style: italic;
  padding: var(--space-sm);
  background-color: #fef3c7;
  border-radius: var(--radius-xs);
  border-left: var(--space-2xs) solid var(--secondary-color);
}

.leader-contact {
  display: flex;
  align-items: center;
  gap: var(--space-xs);
  margin-top: var(--space-xs);
}

.contact-label {
  font-size: var(--text-sm);
  color: var(--text-gray);
  font-weight: var(--font-semibold);
}

.contact-value {
  font-size: var(--text-sm);
  color: var(--primary-color);
  font-weight: var(--font-semibold);
  background-color: #eff6ff;
  padding: 6rpx var(--space-sm);
  border-radius: 6rpx;
}

/* 加载更多 */
.load-more, .no-more {
  text-align: center;
  margin-top: var(--space-xl);
}

.no-more text {
  color: var(--text-light);
  font-size: var(--text-sm);
}

/* 响应式设计 */
@media (max-width: 750rpx) {
  .leader-card {
    flex-direction: column;
    align-items: center;
    text-align: center;
  }

  .leader-avatar {
    margin-right: 0;
    margin-bottom: var(--space-sm);
  }

  .leader-header {
    flex-direction: column;
    gap: var(--space-xs);
  }

  .leader-details {
    align-items: center;
  }

  .filters-content {
    gap: var(--space-md);
  }

  .filter-options {
    gap: 12rpx;
  }

  .filter-option {
    padding: 10rpx var(--space-md);
    font-size: var(--text-sm);
  }
}
