/* 领导者页面样式 */
.leaders-page {
  background-color: var(--bg-light);
  min-height: 100vh;
}

/* Banner 轮播区域 */
.banner-section {
  position: relative;
  width: 100%;
  margin: 0;
  padding: 0;
}

.banner-swiper {
  width: 100%;
  height: calc(100vw * 853 / 1080); /* 1080:853 比例，0边距 */
}

.banner-swiper swiper-item {
  width: 100%;
  height: 100%;
}

.banner-image {
  width: 100%;
  height: 100%;
  display: block;
  object-fit: cover;
}

/* 渐变遮罩和标题 */
.banner-overlay {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 60rpx var(--space-lg) var(--space-lg);
  background: linear-gradient(to top, rgba(6, 141, 123, 0.8), transparent);
  color: var(--white);
  display: flex;
  align-items: flex-end;
  z-index: 10;
}

.banner-title-wrapper {
  display: flex;
  flex-direction: column;
  gap: var(--space-xs);
  align-items: flex-start;
}

.banner-title {
  font-size: var(--text-2xl);
  font-weight: var(--font-bold);
  letter-spacing: 2rpx;
  color: var(--white);
}

.banner-subtitle {
  font-size: var(--text-base);
  color: var(--white);
  opacity: 0.95;
  line-height: 1.5;
  display: flex;
  flex-direction: column;
  gap: 0;
}

.banner-subtitle text {
  display: block;
}

/* 筛选区域 */
.filters-section {
  background-color: var(--white);
  padding: var(--space-md) var(--space-lg);
  border-bottom: 1rpx solid var(--border-light);
}

.filters-content {
  display: flex;
  align-items: center;
  gap: var(--space-md);
}

/* 下拉筛选器 */
.dropdown-filter {
  position: relative;
  display: inline-block;
}

.dropdown-trigger {
  display: inline-flex;
  align-items: center;
  justify-content: space-between;
  padding: 12rpx var(--space-md);
  background-color: var(--bg-gray);
  border-radius: var(--radius-md);
  border: 1rpx solid var(--border-gray);
  white-space: nowrap;
  cursor: pointer;
  transition: var(--transition-fast);
  min-width: 180rpx;
}

.dropdown-trigger:active {
  background-color: var(--border-light);
}

.dropdown-text {
  font-size: var(--text-sm);
  color: var(--primary-color);
  font-weight: var(--font-medium);
}

.dropdown-arrow {
  font-size: 20rpx;
  color: var(--primary-color);
  transition: var(--transition-fast);
  margin-left: var(--space-xs);
}

.dropdown-arrow.open {
  transform: rotate(180deg);
}

.dropdown-options {
  position: absolute;
  top: 100%;
  left: 0;
  min-width: 240rpx;
  background-color: var(--white);
  border: 1rpx solid var(--border-gray);
  border-radius: var(--radius-md);
  box-shadow: var(--shadow-md);
  max-height: 0;
  overflow: hidden;
  transition: var(--transition-base);
  z-index: var(--z-dropdown);
  opacity: 0;
  margin-top: 8rpx;
}

.dropdown-options.show {
  max-height: 600rpx;
  overflow-y: auto;
  opacity: 1;
}

.dropdown-option {
  padding: var(--space-md) var(--space-lg);
  font-size: var(--text-sm);
  color: var(--primary-color);
  border-bottom: 1rpx solid var(--border-light);
  transition: var(--transition-fast);
  cursor: pointer;
}

.dropdown-option:last-child {
  border-bottom: none;
}

.dropdown-option:active {
  background-color: var(--bg-light);
}

.dropdown-option.selected {
  background-color: var(--bg-light);
  color: var(--primary-color);
  font-weight: var(--font-semibold);
}

/* 领导者区域 */
.leaders-section {
  padding: var(--space-lg) var(--space-lg) var(--space-2xl) var(--space-lg);
}

.section-title {
  font-size: var(--text-lg);
  font-weight: var(--font-bold);
  color: var(--primary-color);
  margin-bottom: var(--space-md);
  display: block;
}

.loading, .empty-state {
  text-align: center;
  padding: var(--space-4xl) 0;
  color: var(--text-gray);
  font-size: var(--text-base);
}

.empty-text {
  color: var(--text-light);
  font-size: var(--text-lg);
}

/* 领导者列表 */
.leaders-list {
  display: flex;
  flex-direction: column;
  gap: var(--space-md);
}

/* 领导者卡片 */
.leader-card {
  background-color: var(--white);
  border-radius: var(--radius-md);
  overflow: hidden;
  box-shadow: var(--shadow-sm);
  display: flex;
  padding: var(--space-md);
}

/* 头像区域 */
.leader-avatar {
  flex-shrink: 0;
  width: 120rpx;
  height: 120rpx;
  border-radius: var(--radius-sm);
  overflow: hidden;
  margin-right: var(--space-md);
}

.avatar-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

/* 信息区域 */
.leader-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.leader-header {
  display: flex;
  align-items: center;
  gap: var(--space-sm);
}

.leader-name {
  font-size: var(--text-xl);
  font-weight: var(--font-bold);
  color: var(--text-dark);
}

.leader-role {
  font-size: var(--text-xs);
  color: var(--success-color);
  background-color: #ecfdf5;
  padding: 6rpx var(--space-sm);
  border-radius: var(--radius-xs);
  font-weight: var(--font-semibold);
}

.leader-details {
  display: flex;
  flex-direction: column;
  gap: var(--space-xs);
}

.leader-community, .leader-street {
  font-size: var(--text-sm);
  color: var(--text-gray);
  padding: 6rpx var(--space-sm);
  background-color: var(--bg-gray);
  border-radius: var(--radius-xs);
  display: inline-block;
  width: fit-content;
}

/* 领导者卡片相关样式已移至组件内 */

.leader-contact {
  display: flex;
  align-items: center;
  gap: var(--space-xs);
  margin-top: var(--space-xs);
}

.contact-label {
  font-size: var(--text-sm);
  color: var(--text-gray);
  font-weight: var(--font-semibold);
}

.contact-value {
  font-size: var(--text-sm);
  color: var(--primary-color);
  font-weight: var(--font-semibold);
  background-color: #eff6ff;
  padding: 6rpx var(--space-sm);
  border-radius: 6rpx;
}

/* 加载更多 */
.load-more, .no-more {
  text-align: center;
  margin-top: var(--space-xl);
}

.no-more text {
  color: var(--text-light);
  font-size: var(--text-sm);
}

/* 响应式设计 */
@media (max-width: 750rpx) {
  .leader-card {
    flex-direction: column;
    align-items: center;
    text-align: center;
  }

  .leader-avatar {
    margin-right: 0;
    margin-bottom: var(--space-sm);
  }

  .leader-header {
    flex-direction: column;
    gap: var(--space-xs);
  }

  .leader-details {
    align-items: center;
  }
}
