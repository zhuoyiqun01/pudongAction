/* components/leader-card/index.wxss */
.leader-card {
  background-color: var(--white);
  border-radius: var(--radius-md);
  overflow: hidden;
  box-shadow: var(--shadow-sm);
  display: flex;
  padding: var(--space-md);
  position: relative;
}
.leader-avatar {
  flex-shrink: 0;
  width: 120rpx;
  height: 120rpx;
  border-radius: var(--radius-sm);
  overflow: hidden;
  margin-right: var(--space-md);
  position: relative;
}
.avatar-image { width: 100%; height: 100%; object-fit: cover; border-radius: var(--radius-sm); }

.gold-badge {
  background-color: var(--secondary-color);
  color: var(--primary-color);
  font-size: var(--text-xs);
  font-weight: var(--font-bold);
  padding: 6rpx var(--space-sm);
  border-radius: var(--radius-xs);
  white-space: nowrap;
}
.leader-info { flex: 1; display: flex; flex-direction: column; gap: 12rpx; }
.leader-header { 
  display: flex; 
  align-items: center; 
  justify-content: space-between; 
  gap: var(--space-sm); 
}
.leader-name-group {
  display: flex;
  align-items: center;
  gap: var(--space-sm);
  flex: 1;
}
.leader-name { font-size: var(--text-xl); font-weight: var(--font-bold); }
.leader-role {
  font-size: var(--text-xs);
  color: var(--success-color);
  background-color: #ecfdf5;
  padding: 6rpx var(--space-sm);
  border-radius: var(--radius-xs);
}
.leader-details { display: flex; flex-direction: column; gap: var(--space-xs); }
.leader-tags {
  display: flex;
  flex-wrap: wrap;
  gap: var(--space-xs);
  align-items: center;
}
.leader-community, .leader-street {
  font-size: var(--text-sm);
  color: var(--text-gray);
  padding: 6rpx var(--space-sm);
  background-color: var(--bg-gray);
  border-radius: var(--radius-xs);
  display: inline-block;
}
.leader-slogan {
  font-size: var(--text-base);
  color: var(--primary-color);
  line-height: 1.5;
  font-style: italic;
  font-weight: var(--font-bold);
  padding: var(--space-xs) 0;
  background-color: transparent;
  border-radius: 0;
  border-left: none;
}
.leader-contact {
  font-size: var(--text-sm);
  color: var(--text-gray);
  padding: var(--space-xs) 0;
  line-height: 1.5;
}

