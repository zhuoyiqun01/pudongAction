/* components/action-card/index.wxss */
.action-card {
  background-color: var(--white);
  margin-bottom: var(--space-sm);
  overflow: hidden;
  box-shadow: var(--shadow-sm);
  transition: var(--transition-fast);
  border-radius: var(--radius-md);
}
.card-image-wrapper {
  width: 100%;
  padding-bottom: 100%; /* 1:1 比例 */
  height: 0;
  position: relative;
  overflow: hidden;
}
.card-image {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
}
.card-content { padding: 12rpx var(--space-xs) var(--space-sm) var(--space-xs); }
.card-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: var(--space-xs);
}
.card-name {
  font-size: var(--text-sm);
  font-weight: var(--font-bold);
  color: var(--text-dark);
}
.card-title {
  font-size: var(--text-sm);
  font-weight: var(--font-semibold);
  color: var(--primary-color);
  margin-bottom: var(--space-sm);
  line-height: 1.4;
}

