  /* 基础重置 */
  page {
    /* 品牌核心色 */
    --primary-color: #068D7B;      /* 主色 - 翠绿色 */
    --secondary-color: #FFE501;    /* 辅助色 - 金黄色 */
    
    /* 辅助点缀色 */
    --accent-pink: #F49B9B;        /* 点缀 - 粉红色 */
    --accent-blue: #A4CCFE;        /* 点缀 - 淡蓝色 */
    --accent-orange: #FDC57A;      /* 点缀 - 橙黄色 */
    --accent-navy: #1a365d;        /* 深蓝（部分标题使用） */
    
    /* 基础灰阶 */
    --white: #ffffff;
    --black: #000000;
    --bg-light: #f8fafc;
    --bg-gray: #f5f5f5;
    --border-gray: #e2e8f0;
    --border-light: #f0f0f0;

    /* 状态色 */
    --error-color: #ef4444;
    --success-color: #059669;
    --warning-color: #fbbf24;
    
    /* 文字色体系 */
    --text-primary: #068D7B;       /* 主要文字跟随主色 */
    --text-dark: #333333;          /* 正文深色 */
    --text-gray: #64748b;          /* 辅助灰色 */
    --text-light: #94a3b8;         /* 占位/极淡灰 */
    --text-white: #ffffff;
    
    /* 字体大小系统 */
    --text-xs: 20rpx;
    --text-sm: 24rpx;
    --text-base: 28rpx;
    --text-lg: 32rpx;
    --text-xl: 36rpx;
    --text-2xl: 48rpx;
    --text-3xl: 64rpx;
    --text-4xl: 72rpx;
    
    /* 间距系统 - 8rpx 步进 */
    --space-3xs: 2rpx;
    --space-2xs: 4rpx;
    --space-xs: 8rpx;
    --space-sm: 16rpx;
    --space-md: 24rpx;
    --space-lg: 32rpx;
    --space-xl: 48rpx;
    --space-2xl: 64rpx;
    --space-3xl: 80rpx;
    --space-4xl: 96rpx;
    
    /* 圆角系统 */
    --radius-xs: 4rpx;
    --radius-sm: 8rpx;
    --radius-md: 16rpx;
    --radius-lg: 24rpx;
    --radius-full: 999rpx;
    
    /* 阴影系统 - 重塑为更轻盈、通透的层次 */
    --shadow-sm: 0 4rpx 12rpx rgba(0, 0, 0, 0.04);   /* 更柔和的投影 */
    --shadow-md: 0 8rpx 24rpx rgba(0, 0, 0, 0.06);   /* 具有呼吸感的悬浮 */
    --shadow-lg: 0 16rpx 48rpx rgba(0, 0, 0, 0.08);  /* 深度层次感 */
    --shadow-green: 0 6rpx 20rpx rgba(6, 141, 123, 0.12); /* 使用品牌色的光晕感 */
    
    /* 动画系统 */
    --transition-fast: all 0.2s ease;
    --transition-base: all 0.3s ease;
    --transition-slow: all 0.5s ease;
    
    /* Z-index 层次 */
    --z-base: 1;
    --z-dropdown: 1000;
    --z-fixed: 999;
    --z-modal: 2000;

    /* 组件尺寸 */
    --banner-height: 260rpx;
    --banner-height-lg: 500rpx;
    --banner-bg-height: 240rpx;
    --dropdown-max-height: 600rpx;

    /* 字体粗细 */
    --font-normal: 400;
    --font-medium: 500;
    --font-semibold: 600;
    --font-bold: 700;
    --font-black: 900;
    
    box-sizing: border-box;
  }
  
